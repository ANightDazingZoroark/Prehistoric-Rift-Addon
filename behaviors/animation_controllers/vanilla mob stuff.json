{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.skeleton_with_aggravating_horn": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "aggravating": "query.is_sheared"
                        }
                    ]
                },
                "aggravating": {
                    "animations": [
                        "animUseAggravatingHorn"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_sheared"
                        }
                    ]
                }
            }
        }
    }
}