//bridge-file-version: #41
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.triceratops_charge": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"can_charge": "query.has_rider"
						}
					]
				},
				"can_charge": {
					"transitions": [
						{
							"default": "!query.has_rider"
						},
						{
							"is_charging": "query.is_powered"
						}
					],
					"on_entry": [
						"@s rift:will_charge",
						"/say yeet charge"
					],
					"on_exit": [
						"@s rift:will_not_charge",
						"/say oof"
					]
				},
				"is_charging": {
					"on_exit": [
						"/tag @s remove trikeCharge"
					],
					"transitions": [
						{
							"can_charge": "!query.is_powered"
						}
					],
					"on_entry": [
						"/say YEEEET",
						"/effect @s speed 5 3"
					]
				}
			}
		},
		"controller.animation.triceratops_happiness": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"happy": "query.is_sheared"
						}
					]
				},
				"happy": {
					"on_entry": [
						"/playsound mob.triceratops.happy"
					],
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					]
				}
			}
		}
	}
}