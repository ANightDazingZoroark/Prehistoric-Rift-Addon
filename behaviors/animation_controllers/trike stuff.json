{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.trike_forced_use_stab": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"stabbing": "query.is_ignited"
						}
					]
				},
				"stabbing": {
					"transitions": [
						{
							"default": "!query.is_ignited"
						}
					],
					"animations": [
						"animForcedAttack"
					]
				}
			}
		},
		"controller.animation.trike_rival_buff": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"animTestForRivals"
					],
					"transitions": [
						{
							"rivalBuff": "(v.x > 0) && !query.is_baby"
						}
					]
				},
				"rivalBuff": {
					"animations": [
						"animTestForRivals",
						"animRivalBuffEffects"
					],
					"transitions": [
						{
							"default": "v.x == 0"
						}
					],
					"on_entry": [
						"@s rift:rival_buff_on"
					],
					"on_exit": [
						"@s rift:rival_buff_off"
					]
				}
			}
		},
		"controller.animation.trike_end_charge_cooldown": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"coolingDown": "query.is_sheared"
						}
					]
				},
				"coolingDown": {
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"animations": [
						"animTrikeChargeCooldown"
					]
				}
			}
		}
	}
}