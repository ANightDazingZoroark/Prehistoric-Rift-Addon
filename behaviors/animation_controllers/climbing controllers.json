//bridge-file-version: #114
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.climb_controlling": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"stay": "query.is_jumping && query.is_riding && query.is_sheared"
						}
					],
					"on_entry": [
						"/say on ground"
					]
				},
				"lookUp": {
					"transitions": [
						{
							"stay": "!query.is_jumping"
						}
					],
					"on_entry": [
						"/say looking up"
					],
					"on_exit": [
						"/execute @e[tag=climber, r=2] ~ ~ ~  effect @s clear"
					],
					"animations": [
						"animClimbUp"
					]
				},
				"stay": {
					"transitions": [
						{
							"lookUp": "query.is_jumping && query.target_x_rotation < -30"
						},
						{
							"lookDown": "query.is_jumping && query.target_x_rotation > 30"
						},
						{
							"default": "!query.is_riding"
						}
					],
					"on_entry": [
						"/say looking straight"
					],
					"animations": [
						"animClimbStay"
					]
				},
				"lookDown": {
					"transitions": [
						{
							"stay": "!query.is_jumping"
						}
					],
					"on_entry": [
						"/say looking down"
					],
					"on_exit": [
						"/execute @e[tag=climber, r=2] ~ ~ ~  effect @s clear"
					],
					"animations": [
						"animClimbDown"
					]
				}
			}
		},
		"controller.animation.configure_climber": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"climber": "query.has_rider && !query.is_on_ground"
						}
					],
					"on_entry": [
						"/tag @s remove climber",
						"/tag @p[r=1] remove climbMount",
						"/effect @s clear",
						"/tag @p[r=1] add nClimbMount"
					],
					"on_exit": [
						"/tag @s add climber",
						"/tag @p[r=1] add climbMount",
						"/tag @p[r=1] remove nClimbMount"
					]
				},
				"climber": {
					"transitions": [
						{
							"default": "!query.has_rider || query.is_on_ground"
						}
					],
					"on_entry": [
						"/tag @s add climber",
						"/tag @p[r=1] add climbMount",
						"/tag @p[r=1] remove nClimbMount"
					],
					"on_exit": [
						"/tag @s remove climber",
						"/tag @p[r=1] remove climbMount",
						"/tag @p[r=1] add nClimbMount",
						"/effect @s clear"
					]
				}
			}
		}
	}
}