{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.tyrannosaurus_roar": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"can_roar": "query.has_rider"
						}
					]
				},
				"can_roar": {
					"transitions": [
						{
							"default": "!query.has_rider"
						},
						{
							"roar": "query.is_roaring"
						}
					],
					"on_entry": [
						"@s rift:will_roar",
						"/say not roaring"
					],
					"on_exit": [
						"@s rift:will_not_roar",
						"/say not riding"
					]
				},
				"roar": {
					"transitions": [
						{
							"can_roar": "!query.is_roaring"
						}
					],
					"on_entry": [
						"/say rawr",
						"/playsound mob.tyrannosaurus.roar @p [x=~, y=~, z=~, r=15]",
						"/tag @s add tyrannoRoar"
					]
				}
			}
		}
	}
}