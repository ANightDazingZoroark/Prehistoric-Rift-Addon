//bridge-file-version: #20
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.stego_harvest": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"can_harvest": "query.has_rider"
						}
					]
				},
				"can_harvest": {
					"transitions": [
						{
							"default": "!query.has_rider"
						},
						{
							"harvesting": "query.is_powered && query.is_tamed"
						}
					],
					"on_entry": [
						"@s rift:will_harvest"
					],
					"on_exit": [
						"@s rift:will_not_harvest"
					]
				},
				"harvesting": {
					"transitions": [
						{
							"can_harvest": "!query.is_powered && query.is_tamed"
						}
					],
					"on_entry": [
						"/say hi",
						"/function cmd.stego_harvest_wheat",
						"/function cmd.stego_harvest_potato",
						"/function cmd.stego_harvest_carrot",
						"/function cmd.stego_harvest_beetroot",
						"/function cmd.stego_harvest_berry",
						"/function cmd.stego_harvest_wither_rose",
						"/function cmd.stego_harvest_cornflower",
						"/function cmd.stego_harvest_blue_orchid"
					],
					"on_exit": [
						"/tag @s remove stegoHarvest"
					]
				}
			}
		}
	}
}