{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.sauro_forced_use_bite": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"biting": "query.is_illager_captain"
						}
					]
				},
				"biting": {
					"transitions": [
						{
							"default": "!query.is_illager_captain"
						}
					],
					"animations": [
						"animForcedAttack"
					]
				}
			}
		},
		"controller.animation.sauro_reset_light_blast_charge_when_weakened": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"weakened": "query.is_sheared"
						}
					]
				},
				"weakened": {
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"animations": [
						"animResetLightBlastCharge"
					]
				}
			}
		}
    }
}