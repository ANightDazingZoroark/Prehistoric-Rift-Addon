{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.sauro_reset_light_blast_charge_when_weakened": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"weakened": "query.is_sheared"
						}
					]
				},
				"weakened": {
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"animations": [
						"animResetLightBlastCharge"
					]
				}
			}
		},
		"controller.animation.sauro_manage_tags": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"canNotify": "query.actor_property('rift:light_blast_notify') == true"
						}
					]
				},
				"canNotify": {
					"transitions": [
						{
							"default": "query.actor_property('rift:light_blast_notify') == false"
						}
					],
					"on_entry": [
						"/tag @s add canNotify"
					],
					"on_exit": [
						"/tag @s remove canNotify"
					]
				}
			}
		}
    }
}