{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.add_tame_tag": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"hasTag": "query.is_tamed"
						}
					]
				},
				"hasTag": {
					"transitions": [
						{
							"default": "!query.is_tamed"
						}
					],
                    "on_entry": [
                        "/tag @s add tamed"
                    ],
                    "on_exit": [
                        "/tag @s remove tamed"
                    ]
				}
			}
		},
