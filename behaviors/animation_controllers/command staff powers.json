//bridge-file-version: #35
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.command_staff": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"use": "query.is_using_item && query.is_riding && query.is_sheared"
						}
					]
				},
				"use": {
					"transitions": [
						{
							"default": "!query.is_using_item"
						}
					],
					"on_entry": [
						"/tag @s add commandStaffUser",
						"/say om nom"
					],
					"on_exit": [
						"/tag @s remove commandStaffUser"
					]
				}
			}
		}
	}
}