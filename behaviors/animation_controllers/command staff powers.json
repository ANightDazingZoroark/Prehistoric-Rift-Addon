//bridge-file-version: #30
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.command_staff": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"use": "query.is_eating && query.is_riding && query.is_sheared"
						}
					]
				},
				"use": {
					"transitions": [
						{
							"default": "!query.is_eating"
						}
					],
					"on_entry": [
						"/tag @s add commandStaffUser",
						"/say om nom"
					],
					"on_exit": [
						"/tag @s remove commandStaffUser"
					]
				}
			}
		},
		"controller.animation.check_for_staff": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"yeet": "query.is_sheared && query.is_eating"
						}
					]
				},
				"yeet": {
					"on_entry": [
						"/say I has staff"
					],
					"transitions": [
						{
							"default": "!query.is_sheared && !query.is_eating"
						}
					],
					"on_exit": [
						"/say i has no staff"
					]
				}
			}
		}
	}
}