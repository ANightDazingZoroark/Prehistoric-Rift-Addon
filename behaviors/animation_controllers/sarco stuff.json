{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.wild_sarco_use_spin_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"spinning": "query.is_powered && !query.is_tamed"
						}
					]
				},
				"spinning": {
					"transitions": [
						{
							"default": "!query.is_powered"
						}
					],
					"animations": [
						"animWildSpinAttack"
					],
					"on_exit": [
						"/event entity @s rift:return_to_bite_attack"
					]
				}
			}
		}
	}
}