//bridge-file-version: #26
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.triceratops_charge": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"can_charge": "query.has_rider"
						}
					]
				},
				"can_charge": {
					"transitions": [
						{
							"default": "!query.has_rider"
						},
						{
							"is_charging": "query.is_charged"
						}
					],
					"on_entry": [
						"@s rift:will_charge"
					],
					"on_exit": [
						"@s rift:will_not_charge"
					]
				},
				"is_charging": {
					"on_exit": [
						"/tag @s remove trikeCharge"
					],
					"transitions": [
						{
							"can_charge": "!query.is_charged"
						}
					],
					"on_entry": [
						"/say YEEEET"
					]
				}
			}
		}
	}
}