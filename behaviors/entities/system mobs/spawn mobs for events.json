{
    "format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "rift:spawn_mobs_for_events",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
        "component_groups": {
            "rift:not_on_ground_raptor_raid": {
                "minecraft:environment_sensor": {
                    "triggers": [
                        {
                            "filters": {
                                "test": "on_ground",
                                "subject": "self",
                                "value": true
                            },
                            "event": "rift:execute_raptor_raid",
                            "target": "self"
                        }
                    ]
                }
            },
            "rift:on_ground_raptor_raid": {
                "minecraft:spawn_entity": {
					"entities": [
						{
							"spawn_entity": "rift:utahraptor",
                            "spawn_event": "minecraft:entity_spawned",
							"single_use": true,
                            "num_to_spawn": 2,
							"min_wait_time": 0,
							"max_wait_time": 0
						}
					]
                },
                "minecraft:timer": {
                    "time": 0.5,
                    "time_down_event": {
                        "event": "rift:die",
                        "target": "self"
                    }
                }
            },
            "rift:do_piranha_swarm": {
                "minecraft:spawn_entity": {
					"entities": [
						{
							"spawn_entity": "rift:megapiranha",
                            "spawn_event": "minecraft:entity_spawned",
							"single_use": true,
                            "num_to_spawn": 3,
							"min_wait_time": 0,
							"max_wait_time": 0
						}
					]
                },
                "minecraft:timer": {
                    "time": 0.5,
                    "time_down_event": {
                        "event": "rift:die",
                        "target": "self"
                    }
                }
            },
            "rift:despawn": {
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:physics": {
				"has_collision": true,
				"has_gravity": true
			},
			"minecraft:fire_immune": true,
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			}
        },
        "events": {
            "rift:raptor_raid": {
                "add": {
                    "component_groups": [
                        "rift:not_on_ground_raptor_raid"
                    ]
                }
            },
            "rift:execute_raptor_raid": {
                "add": {
                    "component_groups": [
                        "rift:on_ground_raptor_raid"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "rift:not_on_ground_raptor_raid"
                    ]
                }
            },
            "rift:piranha_swarm": {
                "add": {
                    "component_groups": [
                        "rift:do_piranha_swarm"
                    ]
                },
                "run_command": {
                    "command": [
                        "fill ~+1 ~ ~+1 ~-1 ~ ~-1 flowing_water",
                        "setblock ~ ~-1 ~ flowing_water"
                    ]
                }
            },
            "rift:die": {
                "add": {
                    "component_groups": [
                        "rift:despawn"
                    ]
                }
            }
        }
    }
}