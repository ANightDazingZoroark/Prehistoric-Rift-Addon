{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "minecraft:phantom",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "animations": {
                "contHypnotizedTag": "controller.animation.add_hypnotized_tag",
                "contDieWithoutTenontosaurus": "controller.animation.general_die_without_tenontosaurus",
                "animFindTenontosaurus": "animation.find_tenontosaurus",
                "animDeathTimer": "animation.hypnosis_death_timer"
            },
            "scripts": {
                "animate": [
                    "contHypnotizedTag",
                    "contDieWithoutTenontosaurus"
                ]
            },
            "properties": {
                "rift:is_hypnotized": {
                    "type": "bool",
                    "default": false,
                    "client_sync": true
                }
            }
        },
        "component_groups": {
            "rift:not_hypnotized": {
                "minecraft:physics": {
                    "has_gravity": false
                },
                "minecraft:movement.glide": {
                    "start_speed": 0.1,
                    "speed_when_turning": 0.2
                },
                "minecraft:behavior.avoid_mob_type": {
                    "priority": 0,
                    "max_dist": 16.0,
                    "ignore_visibility": true,
                    "entity_types": [
                        {
                            "filters": {
                                "any_of": [
                                    { 
                                        "test": "is_family", 
                                        "subject": "other", 
                                        "value": "ocelot" 
                                    },
                                    { 
                                        "test": "is_family", 
                                        "subject": "other", 
                                        "value": "cat" 
                                    }
                                ]
                            },
                            "max_dist": 16
                        },
                        {
                            "filters": {
                                "test": "is_family",
                                "value": "parasaurScary",
                                "subject": "other"
                            },
                            "max_dist": 12,
                            "must_see": true,
                            "walk_speed_multiplier": 1.2,
                            "sprint_speed_multiplier": 1.2
                        }
                    ]
                },
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 1,
                    "reselect_targets": true,
                    "scan_interval": 20,
                    "within_radius": 64.0,
                    "must_see_forget_duration": 0.5,
                    "target_search_height": 80.0,
                    "entity_types": [
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "is_riding",
                                        "subject": "other",
                                        "value": false
                                    }
                                ]
                            },
                            "max_dist": 64
                        },
                        {
                            "filters": {
                                "test": "is_family",
                                "subject": "other",
                                "value": "parasaurAngerer"
                            },
                            "max_dist": 64
                        }
                    ]
                },
                "minecraft:behavior.swoop_attack": {
                    "priority": 2,
                    "damage_reach": 0.2,
                    "speed_multiplier": 1.0,
                    "delay_range": [ 
                        10.0, 
                        20.0 
                    ]
                },
                "minecraft:behavior.circle_around_anchor": {
                    "priority": 3,
                    "radius_change": 1.0,
                    "radius_adjustment_chance": 0.004,
                    "height_adjustment_chance": 0.002857,
                    "goal_radius": 1.0,
                    "angle_change": 15.0,
                    "radius_range": [ 
                        5.0, 
                        15.0 
                    ],
                    "height_offset_range": [ 
                        -4.0, 
                        5.0 
                    ],
                    "height_above_target_range": [ 
                        20.0, 
                        40.0 
                    ]
                }
            },
            "rift:hypnotized": {
                "minecraft:physics": {
                    "has_gravity": true
                },
                "minecraft:flying_speed": {
                    "value": 0.2
                },
                "minecraft:movement.hover": {},
                "minecraft:navigation.hover": {
                    "can_path_over_water": true,
                    "can_sink": false,
                    "can_pass_doors": false,
                    "can_path_from_air": true,
                    "avoid_water": true,
                    "avoid_damage_blocks": true,
                    "avoid_sun": false
                },
                "minecraft:can_fly": {}
            },
            "rift:follow_tenontosaurus": {
                "minecraft:behavior.nearest_prioritized_attackable_target": {
                    "priority": 1,
                    "within_radius": 32.0,
                    "entity_types": [
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_tag",
                                        "subject": "other",
                                        "value": "tenontoTarget"
                                    }
                                ]
                            },
                            "max_dist": 48,
                            "priority": 0
                        },
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "tenontosaurus"
                                    },
                                    {
                                        "test": "has_component",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "minecraft:is_tamed"
                                    }
                                ]
                            },
                            "max_dist": 48,
                            "priority": 1
                        }
                    ]
                }
            },
            "rift:follow_tenontosaurus_no_target": {
                "minecraft:behavior.ranged_attack": {
                    "priority": 3,
                    "attack_radius": 6.0,
                    "attack_radius_min": 4
                },
                "minecraft:on_target_acquired": {
                    "filters": {
                        "all_of": [
                            {
                                "test": "has_component",
                                "subject": "target",
                                "operator": "!=",
                                "value": "minecraft:is_tamed"
                            },
                            {
                                "test": "is_family",
                                "subject": "target",
                                "operator": "!=",
                                "value": "tenontosaurus"
                            }
                        ]
                    },
                    "event": "rift:attack_for_tenontosaurus",
                    "target": "self"
                }
            },
            "rift:attacking_for_tenontosaurus": {
                "minecraft:behavior.melee_attack": {
                    "priority": 2,
                    "reach_multiplier": 1.25
                },
                "minecraft:on_target_escape": {
                    "event": "rift:stop_attacking_for_tenontosaurus",
                    "target": "self"
                }
            },
            "rift:transform_into_hypnotized": {
                "minecraft:transformation": {
                    "into": "minecraft:phantom<rift:transform_into_hypnotized>"
                }
            }
        },
        "components": {
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? 5 : 0"
            },
            "minecraft:type_family": {
                "family": [ 
                    "phantom", 
                    "undead", 
                    "monster", 
                    "mob" 
                ]
            },
            "minecraft:loot": {
                "table": "loot_tables/entities/phantom.json"
            },
            "minecraft:nameable": {},
            "minecraft:health": {
                "value": 20,
                "max": 20
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": { 
                            "test": "in_lava", 
                            "subject": "self", 
                            "operator": "==", 
                            "value": true 
                        },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:attack": {
                "damage": 6
            },
            "minecraft:breathable": {
                "total_supply": 15,
                "suffocate_time": 0,
                "breathes_air": true,
                "breathes_water": false
            },
            "minecraft:collision_box": {
                "width": 0.9,
                "height": 0.5
            },
            "minecraft:movement": {
                "value": 1.8
            },
            "minecraft:burns_in_daylight": {},
            "minecraft:follow_range": {
                "value": 64,
                "max": 64
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"deals_damage": false,
						"cause": "fall"
					}
				]
			}
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "rift:not_hypnotized"
                    ]
                }
            },
            "rift:spawn_hypnotized_by_tenontosaurus": {
                "add": {
                    "component_groups": [
                        "rift:follow_tenontosaurus",
                        "rift:follow_tenontosaurus_no_target",
                        "rift:hypnotized"
                    ]
                },
                "set_property": {
                    "rift:is_hypnotized": true
                }
            },
            "rift:attack_for_tenontosaurus": {
                "add": {
                    "component_groups": [
                        "rift:attacking_for_tenontosaurus"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "rift:follow_tenontosaurus_no_target"
                    ]
                },
                "run_command": {
                    "command": [
                        "say FOR THE QUEEN"
                    ]
                }
            },
            "rift:stop_attacking_for_tenontosaurus": {
                "add": {
                    "component_groups": [
                        "rift:follow_tenontosaurus_no_target"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "rift:attacking_for_tenontosaurus"
                    ]
                }
            },
            "rift:hypnotized_by_tenontosaurus": {
                "add": {
                    "component_groups": [
                        "rift:transform_into_hypnotized"
                    ]
                }
            },
            "rift:transform_into_hypnotized": {
                "add": {
                    "component_groups": [
                        "rift:follow_tenontosaurus",
                        "rift:follow_tenontosaurus_no_target",
                        "rift:hypnotized"
                    ]
                },
                "set_property": {
                    "rift:is_hypnotized": true
                }
            }
        }
    }
}