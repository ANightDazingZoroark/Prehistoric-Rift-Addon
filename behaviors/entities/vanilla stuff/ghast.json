{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:ghast",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "rift:default_targets": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "player"
              },
              "max_dist": 28
            },
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "parasaurAngerer"
              },
              "max_dist": 28
            }
          ],
          "must_see": true
        }
      },
      "rift:attack_forced_attack_entity": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "isForcedAttacking"
              },
              "max_dist": 48.0
            }
          ],
          "must_see": true
        },
        "minecraft:on_target_escape": {
          "event": "rift:no_force_attacked",
          "target": "self"
        }
      },
			"rift:drop_experience_from_forced_attack": {
			  	"minecraft:experience_reward": {
					"on_death": "5 + (query.equipment_count * Math.Random(1,3))"
			  	}
			},
			"rift:drop_more_ghast_tear_from_saurophaganax": {
				"minecraft:spawn_entity": {
					"entities": {
						"min_wait_time": 0,
						"max_wait_time": 0,
						"spawn_item": "ghast_tear",
						"num_to_spawn": 5,
						"single_use": true
					}
			 	}
			}
    },

    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 5 + (query.equipment_count * Math.Random(1,3)) : 0"
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:fire_immune": {
      },
      "minecraft:nameable": {
      },
      "minecraft:health": {
        "value": 10,
        "max": 10
      },
      "minecraft:collision_box": {
        "width": 4,
        "height": 4
      },
      "minecraft:movement": {
        "value": 0.03
      },
      "minecraft:navigation.float": {
        "can_path_over_water": true
      },
      "minecraft:behavior.float_wander": {
        "priority": 2,
        "must_reach": true
      },
      "minecraft:can_fly": {
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/ghast.json"
      },
      "minecraft:shooter": {
        "def": "minecraft:fireball"
      },
      "minecraft:type_family": {
        "family": [ "ghast", "monster", "mob" ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "fall",
            "deals_damage": false
          },
          {
						"on_damage": {
							"filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "forcedAttack"
                  },
                  {
                    "test": "has_target",
                    "subject": "self",
                    "value": false
                  },
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "operator": "!=",
                    "value": "fatal"
                  }
                ]
              },
							"event": "rift:on_force_attacked",
							"target": "self"
						}
					},
          {
            "on_damage": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "forcedAttack"
                  },
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "value": "fatal"
                  }
                ]
              },
              "event": "rift:on_force_attacked_death",
              "target": "self"
            }
          },
					{
						"on_damage": {
							"filters": {
                "all_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "saurophaganax"
                  },
                  {
                    "test": "has_damage",
                    "subject": "self",
                    "value": "fatal"
                  }
                ]
							},
							"event": "rift:drop_more_ghast_tear_from_saurophaganax",
							"target": "self"
						}
					},
          {
						"on_damage": {
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "sarcoSpinAttack"
							},
							"event": "rift:hit_by_sarco_spin",
							"target": "self"
						}
					},
					{
						"on_damage": {
						  	"filters": {
								"test": "has_equipment",
								"subject": "other",
								"value": "rift:dimetrodon_frost_attack"
						  	},
						  	"event": "rift:hit_by_frost_dimetrodon",
						  	"target": "self"
						}
					}
        ]
      },
      "minecraft:jump.static": {
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 1,
        "attack_radius": 64,
        "charge_shoot_trigger": 2,
        "charge_charged_trigger": 1
      },
      "minecraft:follow_range": {
        "value": 64,
        "max": 64
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "rift:default_targets"
          ]
        }
      },
      "rift:on_force_attacked": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "rift:attack_forced_attack_entity"
              ]
            },
            "remove": {
              "component_groups": [
                "rift:default_targets"
              ]
            }
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "anomalocarisForcedAttack"
            },
            "run_command": {
              "command": [
                "effect @e[type=rift:anomalocaris, tag=tamed, tag=ridden, c=1] instant_health 5 0"
              ]
            }
          }
        ]
      },
      "rift:no_force_attacked": {
        "add": {
          "component_groups": [
            "rift:default_targets"
          ]
        },
        "remove": {
          "component_groups": [
            "rift:attack_forced_attack_entity"
          ]
        }
      },
      "rift:hit_by_sarco_spin": {
				"run_command": {
					"command": [
						"effect @s slowness 30 2"
					]
				}
			},
			"rift:hit_by_frost_dimetrodon": {
				"run_command": {
					"command": [
						"effect @s weakness 20 2",
						"effect @s slowness 20 2"
				  	]
				}
			},
      "rift:on_force_attacked_death": {
        "sequence": [
          {

          },
          {
              "filters": {
                  "test": "is_family",
                  "subject": "other",
                  "operator": "!=",
                  "value": "sarcoSpinAttack"
              },
              "add": {
                  "component_groups": [
                      "rift:drop_experience_from_forced_attack"
                  ]
              }
          },
          {
              "filters": {
                  "all_of": [
                      {
                          "test": "is_family",
                          "subject": "other",
                          "value": "sarcoSpinAttack"
                      },
                      {
                          "test": "has_component",
                          "subject": "other",
                          "value": "minecraft:is_tamed"
                      }
                  ]
              },
              "add": {
                  "component_groups": [
                      "rift:drop_experience_from_forced_attack"
                  ]
              }
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "saurophaganaxForcedAttack"
            },
            "add": {
              "component_groups": [
                "rift:drop_more_ghast_tear_from_saurophaganax"
              ]
            },
            "run_command": {
              "command": [
                "scoreboard players add @e[type=rift:saurophaganax, c=1, scores={saurophLightBlst=!10}] saurophLightBlst 1"
              ]
            }
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "anomalocarisForcedAttack"
            },
            "run_command": {
              "command": [
                "effect @e[type=rift:anomalocaris, tag=tamed, tag=ridden, c=1] instant_health 5 2"
              ]
            }
          }
        ]
      },
      "rift:drop_more_ghast_tear_from_saurophaganax": {
        "add": {
          "component_groups": [
            "rift:drop_more_ghast_tear_from_saurophaganax"
          ]
        },
        "run_command": {
          "command": [
						"scoreboard players add @e[type=rift:saurophaganax, c=1, scores={saurophLightBlst=!10}] saurophLightBlst 1"
          ]
        }
      }
    }
  }
}