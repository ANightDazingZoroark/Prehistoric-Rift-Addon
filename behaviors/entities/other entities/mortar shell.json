{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "rift:mortar_shell",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "animations": {
                "contMortarShell": "controller.animation.mortar_shell_underground"
            },
            "scripts": {
                "animate": [
                    "contMortarShell"
                ]
            }
        },
        "component_groups": {
            "rift:underground_not_ready": {
                "minecraft:timer": {
                    "time": 0.1,
                    "time_down_event": {
                        "event": "rift:become_ready_underground",
                        "target": "self"
                    }
                }
            },
            "rift:underground_ready": {
                "minecraft:is_sheared": {}
            },
            "rift:explode": {
                "minecraft:explode": {
                    "fuse_length": 0,
                    "fuse_lit": true,
                    "power": 8
                }
            }
        },
        "components": {
            "minecraft:physics": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:environment_sensor": {
                "triggers": [
                    {
                        "filters": {
                            "test": "on_ground",
                            "subject": "self",
                            "value": true
                        },
                        "event": "rift:explode",
                        "target": "self"
                    },
                    {
                        "filters": {
                            "all_of": [
                                {
                                    "test": "is_moving",
                                    "subject": "self",
                                    "value": false
                                },
                                {
                                    "test": "has_component",
                                    "subject": "self",
                                    "value": "minecraft:is_sheared"
                                }
                            ]
                        },
                        "event": "rift:explode",
                        "target": "self"
                    }
                ]
            },
            "minecraft:entity_sensor": {
                "sensor_range": 1,
                "minimum_count": 1,
                "event_filters": {
                    "all_of": [
                        {
                            "test": "is_family",
                            "subject": "other",
                            "value": "mob"
                        },
                        {
                            "test": "is_underground",
                            "subject": "self",
                            "value": false
                        }
                    ]
                },
                "event": "rift:explode"
            },
            "minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {
						  	"event": "rift:explode",
						  	"target": "self"
						}
					},
                    {
						"deals_damage": false,
						"cause": "fall"
					}
				]
			}
        },
        "events": {
            "rift:spawned_while_underground": {
                "add": {
                    "component_groups": [
                        "rift:underground_not_ready"
                    ]
                },
                "run_command": {
                    "command": [
                        "effect @s levitation 69420666 255 true"
                    ]
                }
            },
            "rift:become_ready_underground": {
                "add": {
                    "component_groups": [
                        "rift:underground_ready"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "rift:underground_not_ready"
                    ]
                }
            },
            "rift:explode": {
                "add": {
                    "component_groups": [
                        "rift:explode"
                    ]
                }
            }
        }
    }
}