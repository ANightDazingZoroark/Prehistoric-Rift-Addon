{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "rift:egg_nest",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "rift:has_egg": {
                "minecraft:is_sheared": {}
            },
            "rift:make_guardian_angry": {
                "minecraft:angry": {
                    "duration": 60,
                    "broadcast_range": 24,
                    "broadcast_anger": true,
					"broadcast_filters": {
						"test": "has_component",
						"subject": "other",
						"operator": "!=",
						"value": "minecraft:is_tamed"
					},
                    "broadcast_targets": [
                        "tyrannosaurus"
                    ],
                    "calm_event": {
                        "event": "rift:calm_down",
                        "target": "self"
                    }
                }
            }
        },
        "components": {
            "minecraft:type_family": {
				"family": [
					"eggNest",
					"inanimate"
				]
            },
            "minecraft:behavior.nearest_attackable_target": {
                "priority": 0,
                "within_radius": 24,
                "reselect_targets": true,
                "entity_types": [
                    {
                        "filters": {
                            "test": "is_family",
                            "subject": "other",
                            "value": "player"
                        },
                        "max_dist": 24
                    }
                ]
            },
            "minecraft:interact": {
                "interactions": [
                    {
                        "on_interact": {
                            "filters": {
                                "test": "has_component",
                                "subject": "self",
                                "value": "minecraft:is_sheared"
                            },
                            "event": "rift:grab_egg",
                            "target": "self"
                        },
                        "interact_text": "action.interact.grab_egg",
                        "spawn_items": {
                            "table": "loot_tables/eggs/tyrannosaurus egg.loot.json"
                        }
                    }
                ]
            },
            "minecraft:physics": {
                "has_gravity": true,
                "has_collision": true
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "all",
                    "deals_damage": false
                }
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "rift:has_egg"
                    ]
                }
            },
            "rift:grab_egg": {
                "add": {
                    "component_groups": [
                        "rift:make_guardian_angry"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "rift:has_egg"
                    ]
                }
            },
            "rift:calm_down": {
                "remove": {
                    "component_groups": [
                        "rift:make_guardian_angry"
                    ]
                }
            }
        }
    }
}