{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "rift:pistol",
			"category": "Equipment"
		},
		"components": {
			"minecraft:stacked_by_data": false,
			"minecraft:max_stack_size": 1,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:durability": {
				"max_durability": 14
			},
            "minecraft:cooldown": {
                "category": "pistol",
                "duration": 0.3
            },
			"minecraft:on_use": {
				"on_use": {
					"event": "rift:shoot",
					"target": "self"
				}
			},
			"minecraft:weapon": {
				"on_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_not_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_hit_block": {
					"event": "rift:damage",
					"target": "self"
				}
			},
			"minecraft:icon": {
				"texture": "pistol"
			},
			"minecraft:display_name": {
				"value": "item.rift:pistol.name"
			},
			"minecraft:creative_category": {
				"parent": "itemGroup.name.riftFirearms"
			}
		},
		"events": {
			"rift:shoot": {
				"sequence": [
					{
                        "condition": "query.remaining_durability > 1",
                        "shoot": {
                            "projectile": "rift:pistol_bullet",
                            "launch_power": 1
                        },
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					},
					{
                        "condition": "query.remaining_durability == 1",
                        "shoot": {
                            "projectile": "rift:pistol_bullet",
                            "launch_power": 1
                        },
						"run_command": {
							"command": [
                                "tellraw @s[m=!c] {\"rawtext\":[{\"text\":\"Sneak and right click/tap and hold to reload! Make sure you have enough magazines to do so beforehand!\"}]}"
							],
							"target": "holder"
						},
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					},
                    {
                        "condition": "query.is_sneaking"
                    }
				]
			},
			"rift:damage": {
				"sequence": [
					{
						"damage": {
							"type": "durability",
							"amount": 0,
							"target": "self"
						}
					}
				]
			}
		}
	}
}