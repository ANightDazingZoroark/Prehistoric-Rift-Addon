{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "rift:rocket_launcher_empty",
			"category": "Equipment"
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:can_destroy_in_creative": false,
            "minecraft:cooldown": {
                "category": "rocket launcher",
                "duration": 5
            },
			"minecraft:use_animation": "bow",
			"minecraft:on_use": {
				"on_use": {
					"event": "rift:shoot",
					"target": "self"
				}
			},
			"minecraft:weapon": {
				"on_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_not_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_hit_block": {
					"event": "rift:damage",
					"target": "self"
				}
			},
			"minecraft:hand_equipped": true,
			"minecraft:icon": {
				"texture": "rocket launcher empty"
			},
			"minecraft:display_name": {
				"value": "item.rift:rocket_launcher.name"
			},
			"minecraft:creative_category": {
				"parent": "itemGroup.name.riftFirearms"
			}
		},
		"events": {
			"rift:shoot": {
				"sequence": [
					{
                        "condition": "query.is_sneaking",
						"run_command": {
							"command": [
								"replaceitem entity @s[hasitem={item=rift:rocket, quantity=!0}] slot.weapon.mainhand 0 rift:rocket_launcher",
                                "clear @s rift:rocket 0 1"
							],
							"target": "holder"
						}
					}
				]
			}
		}
	}
}