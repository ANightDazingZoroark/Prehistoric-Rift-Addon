					"target": "self"
				}
			},
			"minecraft:hand_equipped": true,
			"minecraft:icon": {
				"texture": "rocket launcher"
			},
			"minecraft:display_name": {
				"value": "item.rift:rocket_launcher.name"
			},
			"minecraft:creative_category": {
				"parent": "itemGroup.name.riftFirearms"
			}
		},
		"events": {
			"rift:shoot": {
				"sequence": [
					{
						"condition": "query.remaining_durability > 0",
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						},
						"run_command": {
							"command": [
								"say pew pew"
							],
							"target": "holder"
						}
					}
				]
			},
			"rift:damage": {
				"sequence": [
					{
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					}
				]
			}
