{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "rift:rocket_launcher",
			"category": "Equipment"
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:can_destroy_in_creative": false,
			"minecraft:durability": {
				"max_durability": 1
			},
			"minecraft:use_animation": "bow",
			"minecraft:on_use": {
				"on_use": {
					"event": "rift:shoot",
