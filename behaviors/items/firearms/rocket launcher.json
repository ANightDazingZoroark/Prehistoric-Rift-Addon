{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "rift:rocket_launcher",
			"category": "Equipment"
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:can_destroy_in_creative": false,
            "minecraft:cooldown": {
                "category": "rocket launcher",
                "duration": 5
            },
			"minecraft:use_animation": "bow",
			"minecraft:on_use": {
				"on_use": {
					"event": "rift:shoot",
					"target": "self"
				}
			},
			"minecraft:hand_equipped": true,
			"minecraft:icon": {
				"texture": "rocket launcher"
			},
			"minecraft:display_name": {
				"value": "item.rift:rocket_launcher.name"
			},
			"minecraft:creative_category": {
				"parent": "itemGroup.name.riftFirearms"
			},
            "tag:rift:gun": {}
		},
		"events": {
			"rift:shoot": {
				"sequence": [
					{
                        "shoot": {
                            "projectile": "rift:rocket",
                            "launch_power": 1
                        },
						"run_command": {
							"command": [
								"replaceitem entity @s[m=!c] slot.weapon.mainhand 0 rift:rocket_launcher_empty",
                                "tellraw @s[m=!c] {\"rawtext\":[{\"text\":\"Right click/tap and hold to reload! Make sure you have enough rockets to do so beforehand!\"}]}"
							],
							"target": "holder"
						}
					}
				]
			}
		}
	}
}