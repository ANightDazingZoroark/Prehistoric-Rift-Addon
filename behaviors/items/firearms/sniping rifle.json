					"event": "rift:shoot",
					"target": "self"
				}
			},
			"minecraft:weapon": {
				"on_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_not_hurt_entity": {
					"event": "rift:damage",
					"target": "self"
				},
				"on_hit_block": {
					"event": "rift:damage",
					"target": "self"
				}
			},
			"minecraft:icon": {
				"texture": "sniping rifle"
			},
			"minecraft:display_name": {
				"value": "item.rift:sniping_rifle.name"
			},
			"minecraft:creative_category": {
				"parent": "itemGroup.name.riftFirearms"
			}
		},
		"events": {
			"rift:shoot": {
				"sequence": [
					{
                        "condition": "!query.is_sneaking && query.remaining_durability > 0",
                        "shoot": {
                            "projectile": "rift:sniping_rifle_bullet<rift:inaccurate>",
                            "launch_power": 1
                        },
						"run_command": {
							"command": [
                                "say bad pew pew"
							],
							"target": "holder"
						},
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					},
					{
                        "condition": "query.is_sneaking && query.remaining_durability > 0",
                        "shoot": {
                            "projectile": "rift:sniping_rifle_bullet<rift:accurate>",
                            "launch_power": 1
                        },
						"run_command": {
							"command": [
                                "say accurate pew pew"
							],
							"target": "holder"
						},
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					}
				]
			},
			"rift:damage": {
				"sequence": [
					{
						"damage": {
							"type": "durability",
							"amount": 0,
							"target": "self"
						}
					}
				]
			}
		}
