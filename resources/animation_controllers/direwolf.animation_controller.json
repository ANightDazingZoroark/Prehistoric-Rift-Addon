{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.direwolf_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animStanding": "query.ground_speed == 0"
						},
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.is_sitting"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSitting"
					],
					"transitions": [
						{
							"default": "!query.is_sitting"
						}
					]
				}
			}
        },
		"controller.animation.direwolf_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_ignited"
						}
					]
				},
				"wait": {
					"animations": [
						"animClock"
					],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"feedAgain": "!query.is_ignited && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
					"animations": [
						"animAlert"
					],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"wait": "query.is_ignited && !query.is_tamed"
						}
					]
				}
			}
		},
		"controller.animation.direwolf_show_werewolf_potential_particles": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"particles": "query.is_illager_captain"
						}
					]
				},
				"particles": {
                    "particle_effects": [
                        {
                            "effect": "werewolfPotential",
                            "locator": "werewolfindicator"
                        }
                    ],
					"transitions": [
						{
							"default": "!query.is_illager_captain"
						}
					]
				}
			}
		}
    }
}