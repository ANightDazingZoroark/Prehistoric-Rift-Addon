{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.direwolf_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animNormalStanding": "query.ground_speed == 0"
						},
						{
							"animNormalWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						}
					]
				},
				"sitting": {
					"animations": [
						"animNormalSitting"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				}
			}
        },
		"controller.animation.direwolf_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_stunned"
						}
					]
				},
				"wait": {
					"animations": [
						"animClock"
					],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"feedAgain": "!query.is_stunned && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
					"animations": [
						"animAlert"
					],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"wait": "query.is_stunned && !query.is_tamed"
						}
					]
				}
			}
		},
		"controller.animation.direwolf_show_werewolf_potential_particles": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"particles": "query.out_of_control && !query.is_ignited"
						}
					]
				},
				"particles": {
                    "particle_effects": [
                        {
                            "effect": "werewolfPotential",
                            "locator": "werewolfindicator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_ignited"
						}
					]
				}
			}
		},
        "controller.animation.direwolf_werewolf_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animStanding": "query.ground_speed == 0"
						},
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"notOnGround": "!query.is_on_ground"
						}
					]
				},
				"notOnGround": {
					"animations": [
						"animPounce"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					]
				}
			}
        },
        "controller.animation.direwolf_werewolf_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attacking": "query.is_delayed_attacking"
						}
					]
				},
				"attacking": {
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						},
						{
							"bite": "query.mark_variant == 0"
						},
						{
							"clawLimbo": "query.mark_variant == 1"
						}
					]
				},
				"bite": {
					"animations": [
						"animBite"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				},
				"clawLimbo": {
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						},
						{
							"clawOne": "v.scratchMode = (math.floor(math.random(0,2))); return v.scratchMode == 0;"
						},
						{
							"clawTwo": "v.scratchMode == 1"
						}
					]
				},
				"clawOne": {
					"animations": [
						"animScratchOne"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				},
				"clawTwo": {
					"animations": [
						"animScratchTwo"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				}
			}
        },
		"controller.animation.direwolf_werewolf_boulder_throw": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"throwing": "query.is_charged"
						}
					]
				},
				"throwing": {
					"animations": [
						"animBoulderHurl"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						}
					]
				}
			}
		}
    }
}