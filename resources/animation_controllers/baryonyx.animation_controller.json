{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.baryonyx_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider && !query.is_in_water"
						},
                        {
                            "waterMode": "query.is_in_water"
                        }
					]
				},
                "waterMode": {
                    "animations": [
                        "animSwim"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_in_water"
                        }
					]
                },
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						},
						{
							"waterMode": "query.is_in_water"
						}
					]
				}
			}
		},
		"controller.animation.baryonyx_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"bite": "query.is_delayed_attacking"
						},
						{
							"clawLimbo": "v.attack_time > 0"
						}
					]
				},
                "bite": {
					"animations": [
						"animBite"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				},
				"clawLimbo": {
					"transitions": [
						{
							"default": "v.attack_time == 0"
						},
						{
							"clawOne": "v.clawMode = (math.floor(math.random(0,2))); return v.clawMode == 0;"
						},
						{
							"clawTwo": "v.clawMode == 1"
						}
					]
				},
				"clawOne": {
					"animations": [
						"animClawOne"
					],
					"transitions": [
						{
							"default": "v.attack_time == 0"
						}
					]
				},
				"clawTwo": {
					"animations": [
						"animClawTwo"
					],
					"transitions": [
						{
							"default": "v.attack_time == 0"
						}
					]
				}
			}
		},
		"controller.animation.baryonyx_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_illager_captain"
						}
					]
				},
				"wait": {
					"animations": [
						"animClock"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:undergoing_taming') == false"
						},
						{
							"feedAgain": "!query.is_illager_captain && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
					"animations": [
						"animAlert"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:undergoing_taming') == false"
						},
						{
							"wait": "query.is_illager_captain && !query.is_tamed"
						}
					]
				}
			}
		}
	}
}