{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.triceratops_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						},
						{
							"charge": "query.is_powered && query.ground_speed > 0"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				},
				"charge": {
					"animations": [
						"animCharging"
					],
					"transitions": [
						{
							"default": "!query.is_powered || query.ground_speed == 0"
						}
					]
				}
			}
		},
		"controller.animation.triceratops_angery": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "angery": "query.is_illager_captain"
                        }
                    ]
                },
                "angery": {
                    "particle_effects": [
                        {
                            "effect": "angery",
                            "locator": "angerparticles"
                        }
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_illager_captain"
                        }
                    ]
                }
            }
        }
	}
}