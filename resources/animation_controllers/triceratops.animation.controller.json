//bridge-file-version: #68
{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.triceratops_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"animStanding"
					],
					"transitions": [
						{
							"moving": "query.ground_speed >= 0.25"
						},
						{
							"happy": "query.mark_variant == 1"
						},
						{
							"sitting": "query.is_sitting"
						},
						{
							"melee": "variable.has_target && variable.attack_time >= 0.0"
						},
						{
							"charge": "query.has_target && query.ground_speed >=0.5"
						}
					]
				},
				"moving": {
					"animations": [
						"animWalk"
					],
					"transitions": [
						{
							"default": "query.ground_speed < 0.25"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSitting"
					],
					"transitions": [
						{
							"default": "!query.is_sitting"
						}
					]
				},
				"happy": {
					"animations": [
						"animHappy"
					],
					"transitions": [
						{
							"default": "query.mark_variant != 1"
						}
					]
				},
				"melee": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "!variable.has_target || variable.attack_time < 0.0"
						}
					]
				},
				"charge": {
					"animations": [
						"animCharging"
					],
					"transitions": [
						{
							"default": "query.ground_speed < 0.5"
						}
					]
				}
			}
		}
	}
}