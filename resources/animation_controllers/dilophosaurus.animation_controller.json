{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.dilophosaurus_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				}
			}
		},
        "controller.animation.dilophosaurus_attack": {
            "initial_state": "default",
            "states": {
                "default": {
                    "animations": [
                        "animSetup"
                    ],
                    "transitions": [
                        {
                            "bite": "query.is_delayed_attacking"
                        },
                        {
                            "spitting": "query.is_sheared"
                        }
                    ]
                },
                "bite": {
                    "animations": [
                        "animSetup",
                        "animBite"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_delayed_attacking"
                        }
                    ]
                },
                "spitting": {
                    "animations": [
                        "animSpit"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_sheared"
                        }
                    ]
                }
            }
        },
		"controller.animation.dilophosaurus_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_ignited"
						}
					]
				},
				"wait": {
					"animations": [
						"animClock"
					],
					"transitions": [
						{
							"default": "query.property('rift:undergoing_taming') == false"
						},
						{
							"feedAgain": "!query.is_ignited && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
					"animations": [
						"animAlert"
					],
					"transitions": [
						{
							"default": "query.property('rift:undergoing_taming') == false"
						},
						{
							"wait": "query.is_ignited && !query.is_tamed"
						}
					]
				}
			}
		},
		"controller.animation.dilophosaurus_spit_particles": {
			"initial_state": "default",
			"states": {
				"default": {
                    "particle_effects": [
                        {
                            "effect": "spitTrail",
                            "locator": "locator"
                        }
                    ]
				}
			}
		}
    }
}