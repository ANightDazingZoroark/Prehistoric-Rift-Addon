{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.dilophosaurus_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.property('rift:tame_state') == 1 && !query.has_target && !query.has_rider && query.property('rift:turret_mode') == false"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.property('rift:tame_state') != 1 || query.has_target || query.has_rider || query.property('rift:turret_mode') == true"
						}
					]
				}
			}
		},
        "controller.animation.dilophosaurus_attack": {
            "initial_state": "default",
            "states": {
                "default": {
                    "animations": [
                        "animSetup"
                    ],
                    "transitions": [
                        {
                            "spitting": "query.property('rift:forced_attack_mode') == 2"
                        },
                        {
                            "angryDelay": "query.is_sheared"
                        }
                    ]
                },
                "angryDelay": {
                    "animations": [
                        "animAngryDelay"
                    ],
                    "transitions": [
                        {
                            "angry": "query.all_animations_finished"
                        }
                    ]
                },
                "angry": {
                    "animations": [
                        "animAngry",
                        {
                            "animBite": "query.is_delayed_attacking"
                        }
                    ],
                    "transitions": [
                        {
                            "calmDown": "!query.is_angry && !query.has_target"
                        }
                    ]
                },
                "calmDown": {
                    "animations": [
                        "animCalmDown"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                },
                "spitting": {
                    "animations": [
                        "animSpit"
                    ],
                    "transitions": [
                        {
                            "default": "query.property('rift:forced_attack_mode') == 0"
                        }
                    ]
                }
            }
        },
		"controller.animation.dilophosaurus_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_ignited"
						}
					]
				},
				"wait": {
					"animations": [
						"animClock"
					],
					"transitions": [
						{
							"default": "query.property('rift:undergoing_taming') == false"
						},
						{
							"feedAgain": "!query.is_ignited && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
					"animations": [
						"animAlert"
					],
					"transitions": [
						{
							"default": "query.property('rift:undergoing_taming') == false"
						},
						{
							"wait": "query.is_ignited && !query.is_tamed"
						}
					]
				}
			}
		},
		"controller.animation.dilophosaurus_spit_particles": {
			"initial_state": "default",
			"states": {
				"default": {
                    "particle_effects": [
                        {
                            "effect": "spitTrail",
                            "locator": "locator"
                        }
                    ]
				}
			}
		},
		"controller.animation.dilophosaurus_trap_particles": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"hasParticles": "query.is_powered"
						}
					]
				},
				"hasParticles": {
                    "particle_effects": [
                        {
                            "effect": "trapParticles",
                            "locator": "locator"
                        }
                    ],
					"transitions": [
						{
							"default": "!query.is_powered"
						}
					]
				}
			}
		}
    }
}