{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.utahraptor_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						},
						{
							"pouncing": "!query.is_on_ground"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				},
				"pouncing": {
					"animations": [
						"animPounce"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					]
				}
			}
		},
		"controller.animation.utahraptor_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_delayed_attacking"
						}
					]
				},
				"attack": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				}
			}
		},
		"controller.animation.utahraptor_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.is_ignited"
						}
					]
				},
				"wait": {
                    "particle_effects": [
                        {
                            "effect": "clock",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"feedAgain": "!query.is_ignited && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
                    "particle_effects": [
                        {
                            "effect": "alert",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"wait": "query.is_ignited && !query.is_tamed"
						}
					]
				}
			}
		}
	}
}