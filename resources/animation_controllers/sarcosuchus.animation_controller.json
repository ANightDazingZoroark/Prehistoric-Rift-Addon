{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.sarcosuchus_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "(query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider) && !query.is_in_water"
						},
                        {
                            "waterMode": "query.is_in_water"
                        }
					]
				},
                "waterMode": {
                    "animations": [
                        "animSwim"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_in_water"
                        }
					]
                },
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						},
                        {
                            "waterMode": "query.is_in_water"
                        }
					]
				}
			}
		},
		"controller.animation.sarcosuchus_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attacking": "query.is_delayed_attacking"
						}
					]
				},
				"attacking": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				}
			}
		},
		"controller.animation.sarcosuchus_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.skin_id == 1"
						}
					]
				},
				"wait": {
                    "particle_effects": [
                        {
                            "effect": "clock",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"feedAgain": "query.skin_id == 0 && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
                    "particle_effects": [
                        {
                            "effect": "alert",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"wait": "query.skin_id == 1 && !query.is_tamed"
						}
					]
				}
			}
		}
	}
}