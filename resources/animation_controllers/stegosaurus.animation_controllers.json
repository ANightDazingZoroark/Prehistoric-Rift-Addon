{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.stegosaurus.move": {
      "initial_state": "default",
      "states": {
        "default": {
	      "animations": [
	        { "walk": "query.modified_move_speed" }
          ],
		  "transitions": [
		    { "idle": "query.ground_speed == 0" }
		  ]			  
        },
		"idle": {
		  "animations": [
		    "idle"
		  ],
		  "transitions": [
		    { "default": "query.ground_speed > 0" }
		  ]		  
		}
      }
    },
	"controller.animation.stegosaurus.head_movement": {
	  "initial_state": "default",
	  "states": {
	    "default": {
	      "animations": ["look_at_target"]
		}
	  }
	},
	"controller.animation.stegosaurus.attack": {
	  "initial_state": "default",
	  "states": {
	    "default": {
		  "transitions": [
		    { "attacking" : "query.is_delayed_attacking > 0" }
		  ]
		},
		"attacking": {
		  "animations": ["attack"],
          "transitions": [
		    { "default" : "query.is_delayed_attacking == 0" }
          ]		  
		}
	  }
	}
  }
}
