{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.smg_sounds": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "normal": "query.variant == 0"
                        },
                        {
                            "grenade": "query.variant == 1"
                        }
                    ]
                },
                "normal": {
                    "animations": [
                        "animNormalShootSound"
                    ]
                },
                "grenade": {
                    "animations": [
                        "animGrenadeShootSound"
                    ]
                }
            }
        }
    }
}