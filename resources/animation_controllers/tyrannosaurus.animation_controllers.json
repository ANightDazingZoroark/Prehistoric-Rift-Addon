						{
							"default": "query.ground_speed == 0.0"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSitting"
					],
					"transitions": [
						{
							"default": "!query.is_sitting"
						}
					]
				}
			}
		},
		"controller.animation.tyrannosaurus_head_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"animLook"
					],
					"transitions": [
						{
							"roar": "query.is_sheared> 0"
						}
					]
				},
				"roar": {
					"animations": [
						"animRoar"
					],
					"transitions": [
						{
							"default": "query.is_sheared == 0"
						}
					]
				}
			}
		},
		"controller.animation.tyrannosaurus_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_delayed_attacking > 0"
						}
					]
				},
				"attack": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "query.is_delayed_attacking == 0"
						}
					]
				}
			}
		}
	}
}