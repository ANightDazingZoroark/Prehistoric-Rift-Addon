{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tyrannosaurus.move": {
      "initial_state": "default",
      "states": {
        "default": {
	      "animations": [
	        { "walk": "query.modified_move_speed" }
          ],
		  "transitions": [
		    { "idle": "query.ground_speed == 0" }
		  ]
        },
		"idle": {
		  "animations": [
		    "idle"
		  ],
		  "transitions": [
		    { "default": "query.ground_speed > 0" }
		  ]
		}
      }
    },
    "controller.animation.tyrannosaurus.head_movement": {
      "initial_state": "default",
      "states": {
	    "default": {
		  "animations": [
		    "look_at_target"
		  ],
	      "transitions": [
	        { "attacking" : "variable.attack_time > 0.0" }
	      ]
        },
        "attacking": {
	      "animations": [
		    "attack",
			"look_at_target"
		  ],
	      "transitions": [
            { "default" : "variable.attack_time == 0.0" }
	      ]
	    }
      }
    }
  }
}