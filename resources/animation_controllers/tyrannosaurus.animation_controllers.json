{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.tyrannosaurus.move": {
      "initial_state": "default",
      "states": {
        "default": {
	      "animations": [
	        "look_at_target",
	        { "walk": "query.is_moving" },
			{ "idle": "query.is_standing" }
          ]
        },
		"idle": {
		  "animations": [
		    "idle"
		  ]
		}
      }
    },
    "controller.animation.tyrannosaurus.head_movement": {
      "initial_state": "default",
      "states": {
	    "default": {
	      "transitions": [
	        {
              "attacking" : "variable.attack_time > 0.0"	  
	        }
	      ]
        },
        "attacking": {
	      "animations": ["attack"],
	      "transitions": [
            {
              "default" : "variable.attack_time == 0.0"
	        }
	      ]
	    }
      }
    }
  }
}