{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.tyrannosaurus_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"animStanding"
					],
					"transitions": [
						{
							"moving": "query.ground_speed > 0.0"
