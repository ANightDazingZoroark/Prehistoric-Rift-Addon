{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.megaloceros_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						},
                        {
                            "pouncing": "!query.is_on_ground"
                        }
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				},
                "pouncing": {
                    "animations": [
                        "animPounce"
                    ],
					"transitions": [
                        {
                            "default": "query.is_on_ground"
                        },
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						}
					]
                }
			}
		},
		"controller.animation.megaloceros_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_ignited"
						}
					]
				},
				"attack": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "!query.is_ignited"
						}
					]
				}
			}
		}
    }
}