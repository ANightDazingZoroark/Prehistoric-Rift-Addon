{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.hypnotized_particles": {
			"initial_state": "default",
			"states": {
				"default": {
                    "transitions": [
                        {
                            "hypnotized": "(query.property('rift:is_hypnotized') == true)"
                        }
                    ]
                },
                "hypnotized": {
                    "particle_effects": [
                        {
                            "effect": "hypnotized",
                            "locator": "particlelocator"
                        }
                    ],
                    "transitions": [
                        {
                            "default": "query.property('rift:is_hypnotized') == false"
                        }
                    ]
                }
            }
        }
    }
}