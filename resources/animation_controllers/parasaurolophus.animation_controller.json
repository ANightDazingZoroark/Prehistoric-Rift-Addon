{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.parasaurolophus_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.actor_property('rift:tame_state') == 1 && !query.has_target && !query.has_rider"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSit"
					],
					"transitions": [
						{
							"default": "query.actor_property('rift:tame_state') != 1 || query.has_target || query.has_rider"
						}
					]
				}
			}
		},
		"controller.animation.parasaurolophus_bipedal": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"bipedal": "query.is_sheared"
						}
					],
					"blend_transition": 0.5
				},
				"bipedal": {
					"animations": [
						"animBipedal"
					],
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"blend_transition": 0.5
				}
			}
		},
		"controller.animation.parasaurolophus_call": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"calling": "query.is_ignited"
						}
					]
				},
				"calling": {
					"animations": [
						"animCall"
					],
					"transitions": [
						{
							"default": "!query.is_ignited"
						}
					]
				}
			}
		}
	}
}