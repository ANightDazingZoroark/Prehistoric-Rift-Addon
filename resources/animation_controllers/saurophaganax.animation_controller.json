{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.saurophaganax_movement": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						{
							"animStanding": "query.ground_speed == 0"
						},
						{
							"animWalk": "query.ground_speed > 0"
						}
					],
					"transitions": [
						{
							"sitting": "query.is_sitting && !query.is_sleeping"
						},
						{
							"sleeping": "query.is_sleeping"
						}
					]
				},
				"sitting": {
					"animations": [
						"animSitting"
					],
					"transitions": [
						{
							"default": "!query.is_sitting"
						},
						{
							"sleeping": "query.is_sleeping"
						}
					]
				},
				"sleeping": {
					"animations": [
						"animSleeping"
					],
					"transitions": [
						{
							"default": "!query.is_sleeping"
						},
						{
							"sitting": "query.is_sitting && !query.is_sleeping"
						}
					]
				}
			}
		},
		"controller.animation.saurophaganax_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_delayed_attacking"
						}
					]
				},
				"attack": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				}
			}
		},
        "controller.animation.saurophaganax_light_blast": {
            "initial_state": "default",
            "states": {
                "default": {
                    "animations": [
                        "animSetup"
                    ],
                    "transitions": [
                        {
                            "lightBlast": "query.is_roaring"
                        }
                    ]
                },
                "lightBlast": {
                    "animations": [
                        "animLightBlast"
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_roaring"
                        }
                    ]
                }
            }
        }
	}
}