{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.egg_growth": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "growing": "query.is_sheared"
                        }
                    ]
                },
                "growing": {
                    "particle_effects": [
                        {
                            "effect": "egg_growth",
                            "locator": "particles"
                        }
                    ],
                    "transitions": [
                        {
                            "default": "!query.is_sheared"
                        }
                    ]
                }
            }
        }
    }
}