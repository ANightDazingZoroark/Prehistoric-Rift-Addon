{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.anomalocaris_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attacking": "variable.attack_time > 0"
						}
					]
				},
				"attacking": {
					"animations": [
						"animAttack"
					],
					"transitions": [
						{
							"default": "variable.attack_time == 0"
						}
					]
				}
			}
		},
		"controller.animation.anomalocaris_taming_progress": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"wait": "!query.is_tamed && query.skin_id == 1"
						}
					]
				},
				"wait": {
                    "particle_effects": [
                        {
                            "effect": "clock",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"feedAgain": "query.skin_id == 0 && !query.is_tamed"
						}
					]
				},
				"feedAgain": {
                    "particle_effects": [
                        {
                            "effect": "alert",
                            "locator": "particlelocator"
                        }
                    ],
					"transitions": [
						{
							"default": "query.is_tamed"
						},
						{
							"wait": "query.skin_id == 1 && !query.is_tamed"
						}
					]
				}
			}
		}
	}
}