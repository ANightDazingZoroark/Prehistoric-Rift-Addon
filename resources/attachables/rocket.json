{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "rift:rocket",
            "materials": {
                "default": "entity_alphatest",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "default": "textures/items/rocket"
            },
            "geometry": {
                "firstPerson": "geometry.items_size_32.first_person",
                "thirdPerson": "geometry.items_size_32.third_person"
            },
            "animations": {
                "wield": "animation.bow.wield",
                "shoot": "animation.bow.wield_first_person_pull"
            },
            "scripts": {
                "animate": [
                    "wield",
                    {
                        "shoot": "q.is_using_item && c.is_first_person"
                    }
                ]
            },
            "render_controllers": [
                {
                    "controller.render.shotgun_first_person": "c.is_first_person"
                },
                {
                    "controller.render.shotgun_third_person": "!c.is_first_person"
                }
            ]
        }
    }
}