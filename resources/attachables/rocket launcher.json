{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "rift:rocket_launcher",
            "materials": {
                "default": "entity_alphatest",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "full": "textures/items/rocket launcher full",
                "empty": "textures/items/rocket launcher empty"
            },
            "geometry": {
                "firstPersonFull": "geometry.rocket_launcher.first_person_full",
                "thirdPersonFull": "geometry.rocket_launcher.third_person_full",
                "firstPersonEmpty": "geometry.rocket_launcher.first_person_empty",
                "thirdPersonEmpty": "geometry.rocket_launcher.third_person_empty"
            },
            "animations": {
                "wield": "animation.bow.wield",
                "shoot": "animation.bow.wield_first_person_pull"
            },
            "scripts": {
                "animate": [
                    "wield",
                    {
                        "shoot": "q.is_using_item && c.is_first_person"
                    }
                ]
            },
            "render_controllers": [
                {
                    "controller.render.rocket_launcher_first_person": "c.is_first_person"
                },
                {
                    "controller.render.rocket_launcher_third_person": "!c.is_first_person"
                }
            ]
        }
    }
}